        <!-- Contatc form-->
        <section class="module">
            <div class="container-fluid container-custom">
                <div class="row">
                    <div class="col-sm-4">
                        <h6>Send me an email.</h6>
                    </div>
                    <div class="col-sm-8">
                    <%= form_for @message, url: contact_path do |message_form| %>
                        <form id="contact-form" method="post" novalidate>
                            <div class="row">
                              <div class="col-sm-12">
                                <div class="form-group">
                                  <%= message_form.text_field :firstName, placeholder: "First Name", class: "form-control" %>
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                  <%= message_form.text_field :lastName, placeholder: "Last Name", class: "form-control" %>
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                  <%= message_form.text_field :company, placeholder: "Company", class: "form-control" %>
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                  <%= message_form.email_field :email, placeholder: "Email", class: "form-control" %>
                                    <p class="help-block text-danger"></p>
                                </div>
                              </div>
                              <div class="col-sm-12">
                                <div class="form-group">
                                  <%= message_form.text_area :content, placeholder: "Message", class: "form-control", rows: "7", required: "" %>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="col-sm-12">
                              <%= message_form.submit "Send", class: "btn btn-brand", type: "submit", value: "Submit" %>
                            </div>
                          </div>
                        </form>
                        <% end %>
                        <!-- Ajax response-->
                        <div class="ajax-response text-center" id="contact-response"></div>
                    </div>
                </div>
            </div>
        </section>
